<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ashlikun.xtablayout.simple.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="测试" />

    <com.ashlikun.xtablayout.XTabLayout
        android:id="@+id/tablayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#888888"
        app:xTabDividerColor="#000"
        app:xTabDividerHeight="15dp"
        app:xTabDividerWidth="0dp"
        app:xTabIndicatorColor="#0f0"
        app:xTabIndicatorHeight="2dp"
        app:xTabIndicatorWidth="10dp"
        app:xTabItemBackground="#00000000"
        app:xTabItemSelectedBackground="@drawable/aaaaaaaaa"
        app:xTabMode="fixed"
        app:xTabSelectedTextColor="#f00"
        app:xTabSelectedTextSize="25sp"
        app:xTabTextColor="#000"
        app:xTabTextSize="18dp" />

    <com.ashlikun.xtablayout.XTabLayout
        android:id="@+id/tabLayout2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:xTabIndicatorColor="#ff4c4d"
        app:xTabIndicatorHeight="2dp"
        app:xTabIndicatorWidthWidthText="true"
        app:xTabMode="fixed"
        app:xTabTextColor="#000000"
        app:xTabTextSize="18dp" />
</LinearLayout>
