<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="XTabLayout">
        <!--指示器高度-->
        <attr name="xTabIndicatorHeight" format="dimension" />
        <!--指示器宽度-->
        <attr name="xTabIndicatorWidth" format="dimension" />
        <!--指示器颜色-->
        <attr name="xTabIndicatorColor" format="color" />
        <!--指示器的资源-->
        <attr name="xTabIndicator" format="reference" />
        <!--指示器宽度和字体一样-->
        <attr name="xTabIndicatorWidthWidthText" format="boolean" />
        <!--是否将选择指示器的宽度贴合到全宽度   -->
        <attr name="xTabIndicatorFullWidth" format="boolean" />
        <!--指示器对齐方式-->
        <attr name="xTabIndicatorGravity">
            <!-- Align indicator to the bottom of this tab layout. -->
            <enum name="bottom" value="0" />
            <!-- Align indicator along the center of this tab layout. -->
            <enum name="center" value="1" />
            <!-- Align indicator to the top of this tab layout. -->
            <enum name="top" value="2" />
            <!-- Stretch indicator to match the height and width of a tab item in this layout. -->
            <enum name="stretch" value="3" />
        </attr>
        <!--内边距,每个xTab边距-->
        <attr name="xTabPadding" format="dimension" />
        <attr name="xTabPaddingStart" format="dimension" />
        <attr name="xTabPaddingTop" format="dimension" />
        <attr name="xTabPaddingEnd" format="dimension" />
        <attr name="xTabPaddingBottom" format="dimension" />
        <!--文字的属性-->
        <attr name="xTabTextAppearance" format="reference" />
        <!--文字默认颜色-->
        <attr name="xTabTextColor" format="color" />
        <!--文字选择颜色-->
        <attr name="xTabSelectedTextColor" format="color" />
        <!--最小宽度-->
        <attr name="xTabMinWidth" format="dimension" />
        <!--最大宽度-->
        <attr name="xTabMaxWidth" format="dimension" />
        <!--item背景 可以有选中的状态-->
        <attr name="xTabBackground" format="reference|color" />
        <!--内容前面边距-->
        <attr name="xTabContentStart" format="dimension" />
        <!--排版模式-->
        <attr name="xTabMode">
            <enum name="scrollable" value="0x00000000" />
            <enum name="fixed" value="0x00000001" />
            <enum name="auto" value="0x00000002" />
        </attr>
        <!--一个时候的对齐方式-->
        <attr name="xTabOneCountGravity">
            <enum name="left" value="0x00000003" />
            <enum name="center" value="0x000000011" />
            <enum name="right" value="0x00000005" />
        </attr>
        <!--文字大小-->
        <attr name="xTabTextSize" format="dimension" />
        <!-- 文字最大行数  默认2行-->
        <attr name="xTabTextMaxLines" format="integer" />
        <!--文字加粗-->
        <attr name="xTabTextBold" format="boolean" />
        <!--选中文字大小-->
        <attr name="xTabSelectedTextSize" format="dimension" />
        <!--选中文字加粗-->
        <attr name="xTabTextSelectedBold" format="boolean" />
        <!--一页显示几个item（当N个内容没有一屏的时候有效）-->
        <attr name="xTabDisplayNum" format="integer" />
        <!--文本字母是否小写转大写-->
        <attr name="xTabTextAllCaps" format="boolean" />
        <!--分割线高度-->
        <attr name="xTabDividerHeight" format="dimension" />
        <!--分割线宽度-->
        <attr name="xTabDividerWidth" format="dimension" />
        <!--分割线颜色-->
        <attr name="xTabDividerColor" format="color" />
        <!--分割线对齐方式-->
        <attr name="xTabDividerGravity">
            <enum name="top" value="0x00000000" />
            <enum name="center" value="0x00000001" />
            <enum name="bottom" value="0x00000002" />
        </attr>

        <!--图标与文字的距离-->
        <attr name="xTabIconAndTextSpace" format="dimension" />


        <attr name="xTabIndicatorAnimationMode">
            <!-- 动画选择指示器的左右边界与对方。 -->
            <enum name="linear" value="0" />
            <!-- 动画选择指示器的左右边界不同步
                相互配合，前面减速，后面加速。
                这使得指示器看起来像是在目的地之间延伸
                然后缩小到适合它的目标选项卡的大小。-->
            <enum name="elastic" value="1" />
            <!-- 通过将选择指示器依次淡出使其动画化 它的当前目的地，然后在新的目的地。 -->
            <enum name="fade" value="2" />
        </attr>

        <attr name="xTabIconTint" format="color" />

        <attr name="xTabIconTintMode">
            <enum name="src_over" value="3" />
            <enum name="src_in" value="5" />
            <enum name="src_atop" value="9" />
            <enum name="multiply" value="14" />
            <enum name="screen" value="15" />
            <enum name="add" value="16" />
        </attr>
        <attr name="xTabRippleColor" format="color" />

        <attr name="xTabUnboundedRipple" format="boolean" />
        <attr name="xTabIndicatorAnimationDuration" format="integer" />


        <attr name="xTabGravity">
            <enum name="fill" value="0" />
            <enum name="center" value="1" />
            <enum name="start" value="2" />
        </attr>

        <attr name="xTabInlineLabel" format="boolean" />
    </declare-styleable>

    <style name="TextAppearance.Design.XTab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/design_tab_text_size</item>
        <item name="android:textColor">@color/mtrl_tabs_legacy_text_color_selector</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="XTabLayout" parent="android:Widget">
        <item name="xTabIconTint">@null</item>
        <item name="xTabMaxWidth">@dimen/design_tab_max_width</item>
        <item name="xTabIndicatorAnimationDuration">@integer/design_tab_indicator_anim_duration_ms
        </item>
        <item name="xTabIndicatorColor">?attr/colorPrimary</item>
        <item name="xTabIndicatorGravity">bottom</item>
        <item name="xTabIndicatorAnimationMode">linear</item>
        <item name="xTabIndicator">@drawable/mtrl_tabs_default_indicator</item>
        <item name="xTabPaddingStart">12dp</item>
        <item name="xTabPaddingEnd">12dp</item>
        <item name="xTabTextAppearance">@style/TextAppearance.Design.XTab</item>
        <item name="xTabTextColor">@null</item>
        <item name="xTabRippleColor">@color/mtrl_tabs_ripple_color</item>
        <item name="xTabUnboundedRipple">true</item>
    </style>

    <style name="XTabLayout.Default" parent="XTabLayout">
        <item name="xTabGravity">fill</item>
        <item name="xTabMode">fixed</item>
        <item name="xTabIndicatorFullWidth">true</item>
    </style>
</resources>
